@model IEnumerable<UTS_PLOO_151524032_YudisthiraPoyoh.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm())
    {
    <p>
        Category Name : @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
    }

</p>
<table class="table">
    <tr>
        <th>
            No
        </th>
        <th>
            Category Id
        </th>
        <th>
            Category Name
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@{ 
   int i = 1;
}

@foreach (var item in Model) {
    <tr>
        <td>
            @i
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.category_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.category_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.category_id })
        </td>
        @{ 
            i++;
        }
    </tr>
}

</table>
